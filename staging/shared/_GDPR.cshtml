@inherits Custom.Hybrid.Razor12
@{
  var pageCss = GetService<Connect.Koi.ICss>();

  // TODO: @2mh the name should also include the module-id, otherwise the label-click activates the wrong chebox of another form on the same page
}
@* Sender AcceptGDPR *@
<div class="form-group">
  <div class="row">
    <div class='@(pageCss.Is("bs3") ? "col col-xs-1" : "col-1")'>
      <input type="checkbox" id="GDPR" name="GDPR" required data-smk-msg="@Resources.LabelRequired" >
    </div>
    <div class='@(pageCss.Is("bs3") ? "col col-xs-11" : "col-11")'>
      <label for="GDPR" class="control-label">@Html.Raw(Resources.GdprLabel)</label>
    </div>
  </div>
</div>