@inherits Custom.Hybrid.Razor12
@{
  var pageCss = GetService<Connect.Koi.ICss>();
}

@* Sender AcceptTerms *@
<div class="mb-3">
  <div class="row">
    <div class='@(pageCss.Is("bs3") ? "col col-xs-1" : "col-1")'>
      <input type="checkbox" id="Terms-@CmsContext.Module.Id" name="Terms-@CmsContext.Module.Id" required data-smk-msg="@Resources.LabelRequired" >
    </div>
    <div class='@(pageCss.Is("bs3") ? "col col-xs-11" : "col-11")'>
      <label for="Terms-@CmsContext.Module.Id" class="control-label">@Html.Raw(Resources.TermsLabel)</label>
    </div>
  </div>
</div>